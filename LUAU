-- Informaci√≥n a mostrar
local infoLines = {
	"üéÆ Discord: okumaru_sempai",
	"üïπÔ∏è Roblox: conosuba220",
	"üïπÔ∏è Roblox: Oku",
	"üîó Grupo: https://discord.gg/5WyvprGwAc",
	"üè™ Sincronizaci√≥n ‚Ä¢ Animaciones ‚Ä¢ Sistemas"
}

local borderLength = 40
local border = string.rep("‚ïê", borderLength)

-- Funci√≥n para imprimir info con borde
local function printBorderedInfo(lines)
	print("‚ïî" .. border .. "‚ïó")
	for _, line in ipairs(lines) do
		local padding = borderLength - #line
		local paddedLine = line .. string.rep(" ", padding)
		print("‚ïë " .. paddedLine .. " ‚ïë")
	end
	print("‚ïö" .. border .. "‚ïù")
end
spawn(function()
	task.wait(5)
	print(ascii1)
	print(ascii2)
	task.wait(1)
	printBorderedInfo(infoLines)
	
end)


-- Validaci√≥n de juego
local currentGameId = game.GameId
local allowedGames = {
	[8304125701] = true,
	[1234567890] = true,
}

if allowedGames[currentGameId] then
	workspace:SetAttribute("NTS03", true)
	print("Aceptado")
	print(currentGameId)
else
	print("Juego no permitido:", currentGameId)
end

-- Manejador de evento para enviar mensajes al cliente
local conexion = game.ReplicatedStorage.Remotes:FindFirstChild("Conexion")

local function getInfoMessages()
	local messages = {}
	table.insert(messages, ascii1)
	table.insert(messages, ascii2)
	table.insert(messages, "Informaci√≥n:")
	for _, line in ipairs(infoLines) do
		table.insert(messages, line)
	end
	return messages
end

if conexion then
	conexion.OnServerEvent:Connect(function(player)
		local messages = getInfoMessages()
		for _, msg in ipairs(messages) do
			conexion:FireClient(player, msg)
		end
	end)
else
	warn("No se encontr√≥ el Remote 'Conexion' en ReplicatedStorage.Remotes")
end
